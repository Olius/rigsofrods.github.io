= partial "header"

.row.main-start
  .small-12.columns.bloglist
    h1
      = I18n.t('blog.title')

  - blog.articles[0...10].each do |article|
    .small-12.columns
      .bloglist#header
        h2
          = article.metadata[:page]['title']
        .details
          span.author#author
            => article.metadata[:page]['firstname']
            = article.metadata[:page]['lastname']
          br
          span.email#email
            a href="#{article.metadata[:page]['profile']}"
              | @#{article.metadata[:page]['nick']}
          br
          span#revdate
            = article.date.strftime("%d %B %Y")
  
      div id="content summary"
        p
          = article.summary

      - article.tags.each do |tag|
        span.label>
          = tag

      .right
        a href='#{article.url}'
          => I18n.t('blog.readmore')
          | â†’
      br
      br
      br

  .small-12.columns
    h4
      = I18n.t('blog.archivelink')

= partial "footer"
